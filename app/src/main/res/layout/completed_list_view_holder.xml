<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/completed_holder"
    android:visibility="visible"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <CheckBox
        android:id="@+id/completedCheckBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="7dp"
        android:button="@drawable/check_box"
        android:checked="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/completed_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginStart="6dp"
        android:padding="5dp"
        android:text="@string/some_kind_of_text"
        android:textColor="#8d969c"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/completedCheckBox2"
        app:layout_constraintStart_toEndOf="@+id/completedCheckBox2"
        app:layout_constraintTop_toTopOf="@+id/completedCheckBox2" />


</androidx.constraintlayout.widget.ConstraintLayout>